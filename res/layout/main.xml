<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/layout"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="bottom" android:clickable="false">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/isHeText"
            android:layout_weight="1" android:layout_gravity="center"
            android:clickable="false" android:editable="false" android:enabled="true" android:focusable="false"
            android:textSize="25dp" android:textColor="#000000" android:paddingTop="25dp" android:textStyle="bold"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/isHeLabel"
            android:id="@+id/isHeButton" android:layout_gravity="center|bottom"/>
</LinearLayout>

